@using ProntoChef.Models
@model ProntoChef.Models.User

@{
    ViewBag.Title = "Login";
}
<head>
    <style>
        body {
            color: white;
        }

        h2, th, td {
            color: white;
        }
        .trans {
            color: rgba(0, 0, 0, 0);
        }
    </style>
</head>
<h2>Login</h2>

@using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "row g-3 needs-validation" }))
{
    @Html.AntiForgeryToken()

    if (TempData["LoginError"] != null)
    {
        <div class="alert alert-danger" role="alert">
            Le credenziali non sono corrette.
        </div>
    }

    <div class="col-6 form-group">
        @Html.LabelFor(model => model.Email, new { htmlAttributes = new { @class = "form-label" } })
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="col-6 form-group">
        @Html.LabelFor(model => model.Password, new { htmlAttributes = new { @class = "form-label" } })
        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
    </div>

    <div class="col-12">
        <button class="btn btn-primary mt-3" type="submit">Login</button>
        <br />
        <p class="mt-3 trans"> - </p>
        <a href="@Url.Action("Create", "Users")" class="btn btn-success">Registrati</a>
    </div>
}