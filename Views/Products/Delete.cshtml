@model ProntoChef.Models.Product

@{
    ViewBag.Title = "Delete";
}
<head>
    <style>
        body {
            color: white;
        }

        h2, th, td {
            color: white;
        }
    </style>
</head>
<h2>Sei sicuro di voler eliminare questo Chef?</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nome Chef :")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            @Html.DisplayName("Foto :")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductImage)
        </dd>

        <dt>
            @Html.DisplayName("Prezzo Per Cooking Session :")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>

        <dt>
            @Html.DisplayName("Tempo di Preparazione :")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PreparationTime)
        </dd>

        <dt>
            @Html.DisplayName("Piatto :")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ingredients)
        </dd>

        <dt>
            @Html.DisplayName("Etnia :")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Elimina" class="btn btn-danger" /> 
            @Html.ActionLink("Torna Indietro", "Index", null, new { @class = "btn btn-info" })
        </div>
    }
</div>
