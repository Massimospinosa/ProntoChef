@model IEnumerable<ProntoChef.Models.OrderSummary>

@{
    ViewBag.Title = "Index";
}
<head>
    <style>
        body {
            color: white;
        }

        h2, th, td {
            color: white;
        }
        .custom-link-style {
            color: rgb(234, 18, 126);
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
            transition: font-size 0.3s ease;
            padding: 5px;
        }

            .custom-link-style:hover {
                font-size: 18px;
                color: white;
                font-size: large;
            }
        tr {
            border-color: #681747;
            border-style: solid;
            border-width: 0px;
        }
    </style>
</head>
<h2>Elenco Prenotazioni</h2>

<p>
    @Html.ActionLink("Crea Prenotazione", "Create", null, new { @class = "custom-link-style" })
</p>
<table class="table">
    <tr>
        <th>
    @Html.DisplayName("ID")
        </th>
        <th>
            @Html.DisplayName("Email")
        </th>
        <th>
            @Html.DisplayName("Data")
        </th>
        <th>
            @Html.DisplayName("Indirizzo")
        </th>
        <th>
            @Html.DisplayName("Note")
        </th>
        <th>
            @Html.DisplayName("Totale")
        </th>
        <th>
            @Html.DisplayName("Stato")
        </th>
        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.ActionLink("Modifica", "Edit", new { id = item.OrderSummaryId }, new { @class = "btn btn-success btn-sm" })
            @Html.ActionLink("Dettagli", "Details", new { id = item.OrderSummaryId }, new { @class = "btn btn-secondary btn-sm" })
            @Html.ActionLink("Elimina", "Delete", new { id = item.OrderSummaryId }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
